<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension>
<extension version="2.5" type="plugin" group="kunena" method="upgrade">
	<name>PLG_KUNENA_EASYBLOG</name>
	<version>0.0.1</version>
	<creationDate>2016-01-10</creationDate>
	<author>Onlinecommunityhub</author>
	<authorEmail>info@onlinecommunityhub.nl</authorEmail>
	<authorUrl>https://onlinecommunityhub.nl</authorUrl>
	<license>GNU/GPL version 3 or later; see LICENSE.txt</license>
	<copyright>Copyright of Ruud van Lent (2015)</copyright>
	<description>PLG_KUNENA_EASYBLOG_DESCRIPTION</description>
	<files>
		<filename plugin="easyblog">easyblog.php</filename>
		<filename>avatar.php</filename>
		<filename>profile.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<!-- Decide to use either Kunena or Easyblog Avatar -->
				<field name="avatar" type="radio" default="1" label="PLG_KUNENA_EASYBLOG_AVATAR" description="PLG_KUNENA_EASYBLOG_AVATAR_DESC" class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<!-- Decide to use either Kunena or Easyblog Profile -->
				<field name="profile" type="radio" default="1" label="PLG_KUNENA_EASYBLOG_PROFILE" description="PLG_KUNENA_EASYBLOG_PROFILE_DESC" class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
